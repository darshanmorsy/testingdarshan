                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>GRID</th>
                                        <th>Student Name</th>
                                        <th>email</th>
                                        <th>course</th>
                                        <th>action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <%var d=data.slice(-1)%>
                                    <%var s=d%>
                                    
                                    <tr>
                                            <input type="text" id="grid_id" value="<%=data.id%>">
                                        <% for(var i=1000; i<data.length; i++){%>
                                            <td name="grid" id="grid"><%= i++ %></td>
                                        <%}%>
                                        <td><%=s%></td>
                                        <td><%=data.email%></td>
                                        <td><%=data.cource%></td>
                                        <td><a  onclick="grid()" class="btn btn-primary px-2 py-1">details</a></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
