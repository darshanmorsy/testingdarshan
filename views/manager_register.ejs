
<%-include('header')%>
<div class="container my-5 pt-5">
    <div class="bg-white px-3" style="box-shadow: 0px 0px 10px rgba(0,0,0,.16);">
        <div class="box mt-5">
            <h2 class="text-center mt-2 pt-3">Create an account</h2>
            <div class="user signinbox d-flex">
                <div class="imgbox col-7 d-flex align-items-center"><img src="/img/about-bg.jpg" width="100%"> </div>
                <div class="formbox col-5">
                    <form method="post" action="/manager/registerProcesss">
                        <div class="form-floating">
                            <label class="floatingInput mt-2">Username</label>
                            <input type="text" class="form-control" placeholder="Username" id="Uname" name="name">
                        </div>
                        <div class="form-floating">
                            <label class="floatingInput mt-2">Email Address</label>
                            <input type="email" class="form-control" placeholder="Email Address" id="Uemail" name="email">
                        </div>
                        <div class="form-floating">
                            <label class="floatingInput mt-2">Create Password</label>
                            <input type="Password" class="form-control"  placeholder="Create Password" id="Ucreatepass" name="password">
                        </div>
                        <div class="form-floating">
                            <label class="floatingInput mt-2">Confirm Password</label>
                            <input type="Password" class="form-control"  placeholder="Confirm Password" id="Uconpass" name="cpassword">
                        </div>
                        <input type="submit" class="submit btn btn-outline-primary mt-3" onclick="return SignUp()" value="Sign Up" name="submit">
                        <p class="signin mt-2">Already have an account? <a href="#" onclick="return toggleForm();">Sign In.</a></p>
                    </form>
                </div>
                
            </div>
         
        </div>
    </div>
</div>
<%- include('footer') %>